#!/usr/bin/env python3

import json
import logging
import sys

import apidoc.generate
import apidoc.inspector

#-------------------------------------------------------------------------------

if __name__ == "__main__":
    logging.getLogger().setLevel(logging.DEBUG)

    modules = apidoc.inspector.inspect_package(sys.argv[1])
    apidoc.generate.write_module_files(modules, sys.argv[2])


